<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="lyan.artyom.dao.pojo.Task" table="task">
        <meta attribute="class-description">
            This class contains the task details.
        </meta>
        <id name="id" type="int" column="id" >
            <generator class="increment"/>
        </id>

        <property name="name" type="string" column="name"  />

        <list name="parameters" cascade="all" fetch="join">
            <key column="task_id"/>
            <list-index column="idx"/>
            <one-to-many class="lyan.artyom.dao.pojo.Parameter"/>
        </list>

        <property name="status" column="status" type="boolean"/>
        <property name="time" column="time" type="date"/>

        <many-to-one name="action" column="action" class="lyan.artyom.dao.pojo.Action" cascade="all" lazy="false"/>

        <property name="comment" column="commentary" type="string"/>
        <property name="alarm" column="alarm" type="boolean"/>
    </class>

</hibernate-mapping>